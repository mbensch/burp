{
  "name": "burp",
  "version": "0.1.0",
  "description": "A cheeky terminal RSS reader",
  "bin": {
    "burp": "./dist/index.mjs"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build --compile --define 'process.env.DEV=\"false\"' --target=bun-darwin-arm64 src/index.tsx --outfile dist/burp",
    "build:binary": "bash scripts/build-binaries.sh",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "html-to-text": "^9.0.5",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "bun-types": "^1.1.0",
    "react-devtools-core": "^7.0.1",
    "typescript": "^5.7.2"
  }
}
